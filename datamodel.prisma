type User {
  id: ID! @id
  email: String! @unique
  password: String
  username: String @unique
  name: String
}

type Product {
  id: ID! @id
  symbol: String! @unique
  engName: String! @unique
  korName: String! @unique
  board: Board @relation(link: INLINE)
}

type Board {
  id: ID! @id
  product: Product!
  posts: [Post!]
}

type Post {
  id: ID! @id
  board: Board
  title: String!
  content: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}